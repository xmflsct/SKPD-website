---
import '../styles/global.css'
import Footer from '../layouts/Footer.astro'
import Header from '../layouts/Header.astro'
import { Image } from 'astro:assets'
import logo from '../assets/logo.jpg'
import anbi from '../assets/anbi.svg'

interface Props {
  title: string
  description?: string
  keywords?: string[]
}

const { title, description, keywords } = Astro.props
---

<!doctype html>
<html lang='nl'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.ico' />

    <title>{title} | SKPD</title>
    {description && <meta name='description' content={description} />}
    {keywords && <meta name='keywords' content={keywords.join(', ')} />}
    <meta name='og:title' content={title} />
    {description && <meta name='og:description' content={description} />}
  </head>
  <body class='w-full min-h-screen max-w-screen-lg mx-auto px-6 flex flex-col'>
    <Header />

    <div class='flex flex-row flex-wrap justify-center md:flex md:flex-row'>
      <main class={'w-full md:order-2 md:w-5/6 md:px-4 prose max-w-none'}>
        <slot />
      </main>

      <div id='left-sidebar' class='w-1/2 pr-2 md:order-1 md:w-1/6 md:px-2'>
        <Image src={logo} alt='SKPD logo' />
        <p class='text-xs italic pt-2 pb-4'>
          Stichting Keramiek Promotie Delft heeft ten doel het bevorderen van de belangstelling voor
          en de bekendheid met de nationale en internationale hedendaagse keramiek.
        </p>
        <Image src={anbi} alt='ANBI logo' />
      </div>
    </div>

    <Footer />
  </body>
</html>

<style is:global>
  a {
    color: #003a97;
    text-decoration: none;
  }
  a:hover {
    color: #c63;
    text-decoration: underline;
  }

  ul > li > p {
    margin: 0;
  }
</style>
