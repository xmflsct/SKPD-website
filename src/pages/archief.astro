---
import Layout from '../layouts/Layout.astro'
import EventPreview from '../layouts/EventPreview.astro'

import { getCollection } from 'astro:content'
const events = await getCollection('events').then(data =>
  data.filter(event => !event.data.type)
)
---

<Layout 
  title='Archief' 
  keywords={['SKPD', 'archief', 'keramiek', 'evenementen']}
  description='Bekijk het archief van alle SKPD keramiek evenementen door de jaren heen.'
>
  <h1 class='text-2xl md:text-3xl font-bold mb-6'>Archief</h1>
  <p class='text-gray-600 mb-6'>
    Bekijk hier alle voorgaande evenementen van Stichting Keramiek Promotie Delft.
  </p>
  <div class='space-y-2'>
    {events.map(event => <EventPreview event={event} />)}
  </div>
</Layout>
